{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "FE serve",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:4200/#",
            "webRoot": "${workspaceFolder}/fe",
            "sourceMapPathOverrides": {
                "webpack:/./*": "${webRoot}/*",
                "webpack:///./src/*": "${webRoot}/src/*",
                "webpack:/*": "*",
                "webpack:/./~/*": "${webRoot}/node_modules/*"
            }
        },
        {
            "name": "BE serve",
            "type": "node",
            "request": "attach",
            "port": 9231,
            "protocol": "inspector",
            "restart": "true"
        },
        {
            "name": "BE specs mem",
            "type": "node",
            "runtimeArgs": [
                "--trace-warnings",
                "--debug-brk",
                "--inspect"
            ],
            "env": {},
            "protocol": "inspector",
            "request": "launch",
            "cwd": "${workspaceRoot}/be",
            "program": "${workspaceRoot}/be/src/tests/jasmine.ts",
            "sourceMaps": true,
            "outFiles": [
                "${workspaceRoot}/be/dist/**/*.js"
            ]
        },
        {
            "name": "BE specs postgres",
            "type": "node",
            "runtimeArgs": [
                "--trace-warnings",
                "--debug-brk",
                "--inspect"
            ],
            "env": {
                "FRMDB_STORAGE": "postgres"
            },
            "protocol": "inspector",
            "request": "launch",
            "cwd": "${workspaceRoot}/be",
            "program": "${workspaceRoot}/be/src/tests/jasmine.ts",
            "sourceMaps": true,
            "outFiles": [
                "${workspaceRoot}/be/dist/**/*.js"
            ]
        },
        {
            "name": "ng e2e",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/node_modules/protractor/bin/protractor",
            "protocol": "inspector",
            "args": [
                "${workspaceFolder}/protractor.conf.js"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "node-current-file",
            "protocol": "inspector",
            "args": [
                "${relativeFile}"
            ],
            "cwd": "${workspaceRoot}",
            "runtimeArgs": [
                "-r",
                "ts-node/register"
            ],
            "internalConsoleOptions": "openOnSessionStart"
        }
    ]
}