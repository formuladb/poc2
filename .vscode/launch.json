{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "jasmine",
            "type": "node",
            "runtimeArgs": [
                "--trace-warnings",
                "--debug-brk",
                "--inspect=0.0.0.0:9232"
            ],
            "env": {
                "DEBUG": "formuladb:*"
            },
            "protocol": "inspector",
            "port": 9232,
            "request": "launch",
            "cwd": "${workspaceRoot}",
            "program": "${workspaceFolder}/jasmine.js",
            "args": [
                "${relativeFile}"
            ],
            "sourceMaps": true,
            "outFiles": [
                "${workspaceRoot}/tsc-out/**/*.js",
            ]
        },
        {
            "name": "jasmine postgres",
            "type": "node",
            "runtimeArgs": [
                "--trace-warnings",
                "--debug-brk",
                "--inspect=0.0.0.0:9232"
            ],
            "env": {
                "DEBUG": "formuladb:*",
                "FRMDB_STORAGE": "postgres",
                "WSLENV": "FRMDB_STORAGE"
            },
            "protocol": "inspector",
            "port": 9232,
            "request": "launch",
            "cwd": "${workspaceRoot}",
            "program": "${workspaceFolder}/jasmine.js",
            "args": [
                "${relativeFile}"
            ],
            "sourceMaps": true,
            "outFiles": [
                "${workspaceRoot}/tsc-out/**/*.js",
            ]
        },        
        {
            "name": "FE serve",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:8081",
            "webRoot": "${workspaceFolder}",
            "pathMapping": {
                "/formuladb-editor": "${workspaceFolder}/vvvebjs"
            },
            "sourceMapPathOverrides": {
                "webpack:///./domain/src/*": "${webRoot}/domain/src/*",
                "webpack:///./functions/src/*": "${webRoot}/functions/src/*",
                "webpack:///./core/src/*": "${webRoot}/core/src/*",
                "webpack:///./test/src/*": "${webRoot}/test/src/*",
                "webpack:///./fe/src/*": "${webRoot}/fe/src/*",
            }
        },
        {
            "name": "FE serve - env",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:8082",
            "webRoot": "${workspaceFolder}",
            "pathMapping": {
                "/formuladb-editor": "${workspaceFolder}/vvvebjs"
            },
            "sourceMapPathOverrides": {
                "webpack:///./domain/src/*": "${webRoot}/domain/src/*",
                "webpack:///./functions/src/*": "${webRoot}/functions/src/*",
                "webpack:///./core/src/*": "${webRoot}/core/src/*",
                "webpack:///./test/src/*": "${webRoot}/test/src/*",
                "webpack:///./fe/src/*": "${webRoot}/fe/src/*",
            }
        },
        {
            "name": "BE serve",
            "type": "node",
            "request": "attach",
            "address": "localhost",
            "protocol": "auto",
            "restart": true,
            "port": 9231,
            "localRoot": "${workspaceFolder}/dist-be",
            "remoteRoot": "/dist-be",
            "sourceMaps": true,
            "outFiles": [
                "${workspaceFolder}/dist-be/*.js"
            ],
            "skipFiles": [
                "<eval>/**/*.js",
                "<node_internals>/**/*.js",
            ],
            "trace": true
        },
        {
            "name": "e2e",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/node_modules/protractor/bin/protractor",
            "protocol": "inspector",
            "args": [
                "e2e/protractor.conf.js"
            ]
        }
    ]
}