{
    "version": "0.2.0",
    "configurations": [

        {
            "name": "ng serve",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:4200/#",
            "webRoot": "${workspaceFolder}/fe",
            "sourceMapPathOverrides": {
                "webpack:/./*": "${webRoot}/*",
                "webpack:///./src/*": "${webRoot}/src/*",
                "webpack:/*": "*",
                "webpack:/./~/*": "${webRoot}/node_modules/*"
            }
        },
        {
            "name": "ng test",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:9876/debug.html",
            "webRoot": "${workspaceFolder}/fe"
        },
        {
            "name": "ng e2e",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/node_modules/protractor/bin/protractor",
            "protocol": "inspector",
            "args": [
                "${workspaceFolder}/protractor.conf.js"
            ]
        },
        {
            "name": "BE run",
            "type": "node",
            "request": "attach",
            "port": 9229,
            "protocol": "inspector",
            "restart": "true"
        },
        {
            "name": "BE Jasmine",
            "type": "node",
            "runtimeArgs": [
                "--trace-warnings",
                "--debug-brk",
                "--inspect"
            ],
            "env": {
                "DEBUG": "pouchdb:*"
            },
            "protocol": "inspector",
            "request": "launch",
            "cwd": "${workspaceRoot}/be",
            "program": "${workspaceRoot}/be/src/tests/jasmine.ts",
            "sourceMaps": true,
            "outFiles": ["${workspaceRoot}/be/dist/**/*.js"]
        }
    ]
}