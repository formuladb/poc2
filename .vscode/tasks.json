{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "_runner": "terminal",
    "tasks": [
        {
            "label": "echo",
            "type": "shell",
            "command": ". ~/.bashrc && env && echo Hello && ps -ef"
        },
        {
            "label": "FE serve",
            "command": "npm start",
            "type": "shell",
            "options": {
                "cwd": "./fe"
            },
            "terminalGroup": "run_febe",
            "presentation": {
                "echo": true,
                "reveal": "never",
                "focus": false,
                "panel": "shared"
            },
            "isBackground": false,
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "BE serve",
            "command": "npm",
            "type": "shell",
            "options": {
                "cwd": "./be"
            },
            "args": [
                "run",
                "serve"
            ],
            "terminalGroup": "run_febe",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "isBackground": true,
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        }
    ]
}