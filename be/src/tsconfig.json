{
    "extends": "../tsconfig.json",
    "compilerOptions": {
        "outDir": "../dist",
        "baseUrl": "./",
        "module": "commonjs",
        "strictNullChecks": true,
        "paths": {
            "@domain/*": ["../../domain/src/*"],
            "@functions/*": ["../../functions/src/*"],
            "@core/*": ["../../core/src/*"],
            "@storage/*": ["../../storage/src/*"],
	        "@fe/*": ["./*"],
        }
    },
    "include": [
        "./**/*",
        "../../domain/src/**/*",
        "../../functions/src/**/*",
        "../../core/src/**/*",
        "../../storage/src/**/*"
    ]
}
