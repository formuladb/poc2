{
    "compileOnSave": false,
    "compilerOptions": {
        "outDir": "./tsc-out",
        "sourceMap": true,
        "declaration": false,
        "module": "commonjs",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "strictNullChecks": true,
        "target": "ES2018",
        "typeRoots": [
            "node_modules/@types"
        ],
        "baseUrl": ".",
        "paths": {
            "@live-dom-template/*": ["./live-dom-template/src/*"],
            "@domain/*": ["./domain/src/*"],
            "@functions/*": ["./functions/src/*"],
            "@core/*": ["./core/src/*"],
            "@storage/*": ["./storage/src/*"]
        },        
        "lib": [
            "es2018",
            "dom"
        ]
    },
    "include": [
        "./live-dom-template/src/**/*",
        "./domain/src/**/*",
        "./functions/src/**/*",
        "./core/src/**/*",
        "./storage/src/**/*",
        "./be/src/**/*",
        "./fe2/src/**/*"
    ]
}
