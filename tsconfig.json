{
    "compileOnSave": false,
    "compilerOptions": {
        "outDir": "./tsc-out",
        "sourceMap": true,
        "declaration": false,
        "module": "commonjs",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "strictNullChecks": true,
        "target": "ES2018",
        "typeRoots": [
            "node_modules/@types"
        ],
        "baseUrl": ".",
        "paths": {
            "@domain/*": ["./domain/src/*"],
            "@functions/*": ["./functions/src/*"],
            "@core/*": ["./core/src/*"],
            "@storage/*": ["./storage/src/*"],
            "@test/*": ["./test/src/*"],
            "@e2e/*": ["./e2e/src/*"],
            "@be/*": ["./be/src/*"],
            "@fe/*": ["./fe/src/*"]
        },        
        "lib": [
            "es2018",
            "dom"
        ]
    },
    "include": [
        "./domain/src/**/*",
        "./functions/src/**/*",
        "./core/src/**/*",
        "./storage/src/**/*",
        "./test/src/**/*",
        "./e2e/src/**/*",
        "./be/src/**/*",
        "./fe/src/**/*"
    ]
}
