{
    "compileOnSave": false,
    "compilerOptions": {
        "outDir": "./tsc-out",
        "sourceMap": true,
        "declaration": false,
        "module": "commonjs",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "strictNullChecks": true,
        "target": "ES2018",
        "typeRoots": [
            "node_modules/@types"
        ],
        "baseUrl": ".",      
        "lib": [
            "es2018",
            "dom"
        ]
    },
    "include": [
        "./src/**/*",
    ]
}
